<div class="container my-3 py-3">
  <div class="row justify-content-center m-3">
    <div class="column text-center">
      <h1>New Game</h1>
        <% @grid_array.each do |letter| %>
        <a class="btn btn-primary"><%= letter %></a>
        <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="column text-center">
      <form action="/score" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="mb-3">
          <label for="word" class="form-label">What is the longest word you can find?</label>
          <input type="text" class="form-control" placeholder="Your Word" id="word" name="word">
          <input id="grid_array" name="grid_array" type="hidden" value="<%= @grid_array.join %>" />
        </div>
          <button class="btn btn-outline-secondary" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
